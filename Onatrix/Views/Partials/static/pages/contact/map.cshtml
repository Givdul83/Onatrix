@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage;
@{
    
    
}

<section class="map">
                <div class="img-map">
                    <iframe src="@Model.Value("mapImageUrl")" width="100%" height="748" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                </div>
            </section>

            <section class="contact-information">

                <div class="container bg-light">
                    <div class="contact-form bg-light">
                        <h6>@Model.Value("mapFormHeading")</h6>
                        <h2>@Model.Value("mapFormTitle")</h2>
                        <p>@Model.Value("mapFormText")</p>

                        <form action="#">
                            <input class="name" type="text" name="name" placeholder="Name">
                            <input class="phone" type="text" name="phone" placeholder="Phone">
                            <input class="email" type="email" name="email" placeholder="Email address">
                            <select name="service" id="service">
                                <option value="service">Financial consulting</option>
                                <option value="service1">Service 1</option>
                                <option value="service2">Service 2</option>
                                <option value="service3">Service 3</option>
                            </select>
                            <button class="btn btn-primary" type="submit">@Model.Value("mapFormButtonText")</button>
                        </form>
                    </div>

                </div>
            </section>
